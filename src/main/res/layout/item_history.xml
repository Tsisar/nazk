<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="32dp"
    android:background="@drawable/background_history">

    <TextView
        android:id="@+id/text_view_history_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingHorizontal="@dimen/row_horizontal_padding"
        android:paddingVertical="@dimen/row_vertical_padding"
        android:textSize="16sp"
        android:textColor="@color/suggestion_item"/>

    <ImageButton
        android:id="@+id/image_button_history_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="@dimen/row_horizontal_padding"
        android:paddingVertical="@dimen/row_vertical_padding"
        android:background="#00000000"
        android:src="@drawable/ic_trash_bin" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="8dp"
    android:paddingStart="@dimen/row_horizontal_padding"
    android:paddingEnd="@dimen/row_horizontal_padding"
    android:paddingTop="@dimen/row_vertical_padding"
    android:paddingBottom="@dimen/row_vertical_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorRowBackground">

    <TextView
        android:id="@+id/lastname_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/firstname_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--<TextView-->
        <!--android:id="@+id/position_textView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->

    <TextView
        android:id="@+id/placeOfWork_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>


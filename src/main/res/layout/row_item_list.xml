    android:orientation="vertical"
    android:layout_marginVertical="@dimen/activity_vertical_margin"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:paddingVertical="@dimen/row_vertical_padding"
    android:paddingHorizontal="@dimen/row_horizontal_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_blue_stroke">

    <TextView
        android:id="@+id/text_view_item_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_view_item_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--<TextView-->
        <!--android:id="@+id/position_textView"-->

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/row_horizontal_padding"
    android:paddingEnd="@dimen/row_horizontal_padding"
    android:paddingTop="@dimen/row_vertical_padding"
    android:paddingBottom="@dimen/row_vertical_padding"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/html_imageButton"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@mipmap/html_icon"/>

    <ImageButton
        android:id="@+id/pdf_imageButton"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@mipmap/pdf_icon"/>

</LinearLayout>